<%= form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :product_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:product, :product_type_id, @product_type, :id, :name)%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :brand_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:product, :brand_id, @brand, :id, :name)%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:product, :quantity_type_id, @quantity_type, :id, :name)%>
    </div>
  </div>
    <div class="control-group">
      <%= f.label :item_count, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :item_count, :class => 'text_field' %>
      </div>
    </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn' %>
  </div>
<% end %>

